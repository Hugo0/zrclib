{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["dom", "es2017"],
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["./src/**/*.ts"]
  // "exclude": ["./src/**/*.test.ts"]
}
